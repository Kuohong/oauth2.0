    <!--<location>/index.jsp</location>-->
    <!--</error-page>-->

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>


    <welcome-file-list>
        <welcome-file>loading.jsp</welcome-file>
    </welcome-file-list>


</web-app>
